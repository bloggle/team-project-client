{{#each comments as |comment|}}
  <section data-id="{{comment.id}}">
    <h6 id="comment-id">Blog Comment:</h6>
    <h6>User:</h6>
    <h3>
      {{comment.owner.email}}
    </h3>
    <h4>Date:</h4>
    <h3>
      {{comment.createdAt}}
    </h3>
    <h3>
      {{comment.text}}
    </h3
    </p>

  {{#if commentOwned}}
    <button data-id="{{comment.id}}" class="btn btn-danger delete">Remove comment</button>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#updateModal-{{comment.id}}">
  Update comment
</button>

<div class="modal fade" id="updateModal-{{comment.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">My update</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form data-id="{{comment.id}}" method="patch" class="update-comment">
          <input type="text" name="comment[text]" placeholder="comment text"
            <button type="submit" class="btn btn-save">Save changes</button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>

  {{/if}}
</section>

{{/each}}
